<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".PhotoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:text="UPODOBNIJ SIĘ DO ZDJĘCIA NAJLEPIEJ JAK POTRAFISZ!"
        android:gravity="center"
        android:layout_marginTop="16dp"
        />

    <ImageView
        android:id="@+id/photoAct"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_circle_svgrepo_com"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/sendPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKE A PHOTO!"
        android:layout_below="@id/photoAct"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>