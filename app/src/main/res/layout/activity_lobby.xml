<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/roomIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Room ID:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/copyRoomIdButton"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textSize="8sp"
        android:text="COPY ID"
        android:layout_alignTop="@id/roomIdTextView"
        android:layout_marginLeft="90dp"
        android:onClick="copyRoomId"/>


    <TextView
        android:id="@+id/roomIdValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomIdTextView"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="16sp" />

    <TextView
        android:id="@+id/playersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomIdValueTextView"
        android:layout_marginTop="16dp"
        android:text="Players:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playersTextView"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/leaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playersRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Leave Room" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playersRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:text="START!" />

</RelativeLayout>
